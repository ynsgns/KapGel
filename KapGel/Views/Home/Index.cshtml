@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/assets/Scripts/jquery-3.3.1.js"></script>
<link href="~/Content/PagedList.css" rel="stylesheet" />
